{% extends 'CodeChallengeBundle::administration/base_admin.html.twig' %}


{% block admin %}
    <div class="center-block" style="width:400px">
        <h1 class="text-center">Add Challenge</h1> 
    
        <form action="{{path ('prob_ajout', {'prob': prob})}}" method="post">
             <label for="nom">{{ 'Problem name'|trans }}</label>
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                </br>
                <label for="level">{{ 'Level'|trans }}</label>
                {{ form_errors(form.level) }}
                {{ form_widget(form.level, { 'attr': {'class': 'form-control'} }) }}
                </br>
                <label for="content">{{ 'Content'|trans }}</label>
                {{ form_errors(form.content) }}
                {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
                </br>
                 <label for="score">{{ 'Score'|trans }}</label>
                {{ form_errors(form.score) }}
                {{ form_widget(form.score, { 'attr': {'class': 'form-control'} }) }}
                </br>
                 <label for="nombreTestes">{{ 'Test\'s number'|trans }}</label>
                {{ form_errors(form.nombreTestes) }}
                {{ form_widget(form.nombreTestes, { 'attr': {'class': 'form-control'} }) }}
                </br>
                {{ form_widget(form.Send, { 'attr': {'class': 'btn btn-info center-block'} }) }}
                </br>
        {{ form_rest(form)  }}
        </form>
        
    </div>
{% endblock %}

